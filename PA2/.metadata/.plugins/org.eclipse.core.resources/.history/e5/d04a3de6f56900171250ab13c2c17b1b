#include <stdlib.h>
#include <stdio.h>
#include <string.h>
#include "List.h"

int main ( int args, char *argv[] ) {
	int lines = 0;
	FILE *in, *out;
	char line[255];


	in = fopen(argv[1], "read");
	out = fopen(argv[2], "write");

	if (args != 3) {
		fprintf(stderr, "Usage: %s <input file> <output file>\n", argv[0]);
		exit(1);
	}

	while (fgets(line, 255, in) != NULL) {
		lines ++;
	}

	rewind(in);

	char array[lines - 1][255];
    int l = 0;

    while(fgets(line, 255, in) != NULL) {
        strcpy(array[l++], line);
    }

	List list = newList();
    append(list, 0);
    for (int i = 1; i < lines; i++) {
    	int j = 0;
    	moveBack(list);
    	char *temp = array[i];
    	while (j < i && strcmp(temp, array[get(list)]) <= 0) {
    		movePrev(list);
    		j ++;
    	}
    	if(index(list) != -1) {
    		insertAfter(list, i);
    	} else {
    		prepend (list, j);
    	}
    }

   moveFront(list);
    while(index(list) >= 0) {
        fprintf(out, "%s", array[get(list)]);
        moveNext(list);
    }

    fclose(in);
    fclose(out);
    freeList(&list);
    return(0);
}
